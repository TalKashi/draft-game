{
  "rules": {
    ".read": true,
    "leagues": {
      "all": {
        "$league_id": {
          ".write": "auth != null && newData.exists()",
          ".validate": "newData.hasChildren(['users', 'name']) && newData.child('name').isString()",
          "users": {
            "$uid": {
              ".validate": "auth.uid === $uid && root.child('users').hasChild($uid)"
            }
          }
        }
      }
    }
  }
}
